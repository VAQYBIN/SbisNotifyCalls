[flake8]
# Максимальная длина строки (по умолчанию 79, увеличиваем до 120)
max-line-length = 120

# Игнорируемые директории
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    .env,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .tox,
    .abstra

# Игнорируемые ошибки
ignore = 
    # E203: Пробел перед ':' (конфликтует с black)
    E203,
    # W503: Перенос строки перед бинарным оператором (старый стиль)
    W503,
    # E501: Строка слишком длинная (уже настроили max-line-length)
    E501

# Показать статистику ошибок
statistics = True

# Показать исходный код с ошибками
show-source = True

# Подсчитывать ошибки
count = True

# Формат вывода ошибок
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# Включить проверку docstrings
docstring-convention = google

# Сложность кода (максимальная цикломатическая сложность)
max-complexity = 15

# Максимальная вложенность
max-nested-blocks = 5

# Включить все плагины по умолчанию
enable-extensions = 
    # Проверка именования
    N801,N802,N803,N804,N805,N806,
    # Проверка docstrings  
    D100,D101,D102,D103,D104,D105,D106,D107,
    # Проверка импортов
    I100,I101,I201,I202

# Список файлов для проверки (по умолчанию все .py файлы)
filename = *.py

# Показывать прогресс при проверке
verbose = 1

# Останавливать при первой ошибке
# hang-closing = False

# Проверять только измененные файлы (для git hook)
# diff = False